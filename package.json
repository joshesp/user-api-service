{
  "name": "ndj-auth-service",
  "version": "1.0.4",
  "description": "Microservicio para el gestion relacionada a la autenticación de usuarios",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "predev": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "prebuild": "npm install && npm run swagger",
    "build": "tsc",
    "swagger": "tsoa spec",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "MisCuentasApp",
    "Microservice de usuarios"
  ],
  "author": "Josué Espinosa Alvarado",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshesp/user-api-service"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.13.0",
    "@types/pg": "^8.11.6",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/app.ts"
  }
}
